{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@deeptrust-ai/deep-ui": ["lib"],
      "@deeptrust-ai/deep-ui/*": ["lib/*"]
    },
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "skipLibCheck": true
  },
  "exclude": ["lib/**/*.d.ts", "lib/**/*.stories.tsx", "node_modules"]
}
